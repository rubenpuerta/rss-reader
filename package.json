{
	"name": "rss-reader",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"watch": "ng build --watch --configuration development",
		"check:ci": "yarn lint && yarn stylelint src/app/**/*.scss",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:ci": "jest --runInBand",
		"test:cov": "ng test --coverage",
		"lint": "ng lint",
		"precz": "lint-staged --allow-empty",
		"cz": "git cz"
	},
	"private": true,
	"lint-staged": {
		"*.html": "prettier --write",
		"*.scss": "stylelint src/app/**/*.scss --fix",
		"*.ts": [
			"eslint --color --fix -c .eslintrc.js",
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-push": "yarn check:ci"
		}
	},
	"dependencies": {
		"@angular/animations": "~12.2.0",
		"@angular/common": "~12.2.0",
		"@angular/compiler": "~12.2.0",
		"@angular/core": "~12.2.0",
		"@angular/forms": "~12.2.0",
		"@angular/platform-browser": "~12.2.0",
		"@angular/platform-browser-dynamic": "~12.2.0",
		"@angular/router": "~12.2.0",
		"rxjs": "~6.6.0",
		"tslib": "^2.3.0",
		"zone.js": "~0.11.4"
	},
	"devDependencies": {
		"@angular-builders/jest": "^12.1.1",
		"@angular-eslint/builder": "1.2.0",
		"@angular-eslint/eslint-plugin": "1.2.0",
		"@angular-eslint/eslint-plugin-template": "1.2.0",
		"@angular-eslint/schematics": "1.2.0",
		"@angular-eslint/template-parser": "1.2.0",
		"@angular-devkit/build-angular": "~12.2.5",
		"@typescript-eslint/eslint-plugin": "4.3.0",
		"@typescript-eslint/parser": "4.3.0",
		"@angular/cli": "~12.2.5",
		"@angular/compiler-cli": "~12.2.0",
		"cz-conventional-changelog": "^3.3.0",
		"@types/jest": "^27.0.1",
		"jest": "^27.1.0",
		"husky": "^7.0.2",
		"jest-preset-angular": "^9.0.7",
		"lint-staged": "^11.1.2",
		"ng-mocks": "^12.4.0",
		"prettier": "^2.3.2",
		"prettier-eslint": "^12.0.0",
		"@types/node": "^12.11.1",
		"typescript": "~4.3.5",
		"stylelint": "^13.13.1",
		"stylelint-order": "4.1.0",
		"stylelint-selector-bem-pattern": "^2.1.0",
		"eslint": "^7.6.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "2.22.1",
		"eslint-plugin-jest": "^24.3.6",
		"eslint-plugin-jsdoc": "30.7.6",
		"eslint-plugin-prefer-arrow": "1.2.2",
		"eslint-plugin-rxjs": "^3.3.0",
		"eslint-plugin-simple-import-sort": "^7.0.0"
	}
}
