{
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"printWidth": 100,
	"quoteProps": "as-needed",
	"trailingComma": "none",
	"bracketSpacing": true,
	"arrowParens": "always",
	"overrides": [
		{
			"files": "*.component.html",
			"options": {
				"parser": "angular"
			}
		},
		{
			"files": "*.html",
			"options": {
				"parser": "html",
				"singleQuote": false
			}
		},
		{
			"files": "*.scss",
			"options": {
				"singleQuote": false
			}
		}
	]
}
